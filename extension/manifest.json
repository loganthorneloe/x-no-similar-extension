{
  "manifest_version": 3,
  "name": "Remove 'See similar posts' button on X",
  "description": "This extension removes the 'See Similar Posts' element on X.",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [],
  "action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
